{% extends 'baseFront.html.twig' %}

{% block title %}Evenements
{% endblock %}

{% block body %}
	<br><br><br><br>
	<div class="page-wrapper" style="width: 919px;">
		<div class="content container-fluid pb-0">
			<div class="card">
				<div class="col-md-12 col-12">
					<nav aria-label="breadcrumb" class="page-breadcrumb">
						<ol class="breadcrumb" style="font-size:20px">Détails Event n° {{event.idEvent}}</ol>
					</nav>
				</div>
				<div class="content">
					<div class="container-fluid">
						<div class="row" style="justify-content: center;">
							<div class="page-header">
								<div class="row align-items-center">
									<div class="col-md-12 d-flex justify-content-end">
										<div class="text-right">
											<a class="btn btn-primary btn-add" style="width:190px" href="{{ path('app_default') }}">
												<i class="feather-corner-up-left "></i>
												Liste Evenements
											</a>
										</div>
									</div>
								</div>
							</div>
						</div><br>
						<div class="card">
							<div class="card-body">
								<table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" ="grid" aria-describedby="DataTables_Table_0_info">
									<tbody>
										<tr>
											<th>IdEvent</th>
											<td>{{ event.idEvent }}</td>
										</tr>
										<tr>
											<th>NomEvent</th>
											<td>{{ event.nomEvent }}</td>
										</tr>
										<tr>
											<th>LieuEvent</th>
											<td>{{ event.lieuEvent }}</td>
										</tr>
										<tr>
											<th>DateEvent</th>
											<td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d') : '' }}</td>
										</tr>
										<tr>
											<th>PrixEvent</th>
											<td>{{ event.prixEvent }}</td>
										</tr>
										<tr>
											<th>DescEvent</th>
											<td>{{ event.descEvent }}</td>
										</tr>
										<tr>
											<th>Image</th>
											<td><img width="50px" height="60px" src="{{ asset(event.image) }}" alt="">
											</td>
										</tr>
									</tbody>
								</table>
								<div>

									
										<a href="{{ path('valider_part', {'idEvent': event.idEvent}) }}" class="btn btn-light btn-transparent" >Participer
											{#<i class="bx bx-link"></i>#}
										</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
