{% extends 'baseBack.html.twig' %}

{% block title %}utilisateurs{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title">utilisateurs</h3>
                
            </div>
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Utilisateur : {{ user.prenom }} {{ user.nom }}</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th>Nom</th>
                                        <th>Prenom</th>
                                        <th>Telephone</th>
                                        <th>Status</th>
                                        <th>  datedenaissance</th>
                                        <th>  Adresse</th>
                                        <th>Roles</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.Nom }}</td>
                                        <td>{{ user.Prenom }}</td>
                                        <td>{{ user.tel }}</td>
                                        <td>{{user.status ? 'activer' : 'desactiver'}}</td>
                                        <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d') : '' }}</td>
                                        <td>{{ user.adresse }}</td>
                                        <td> {{ user.idRole.role }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <a class="btn btn-warning" href="{{ path('app_user_edit', {'idUser': user.idUser}) }}">Modifier</a>
                            <a class="btn"> {{ include('utilisateur/_delete_form.html.twig') }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
{% endblock %}
